
{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
      "noImplicitAny": true,
      "baseUrl": ".",
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "paths": {
        "*": ["node_modules/*", "@types/*"]
      },
      "typeRoots": ["@types", "./node_modules/@types"]
    },
    "include": ["app/**/*", "@types/**/*"]
  }